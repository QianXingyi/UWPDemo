        <Button Content="Login" Height="23" HorizontalAlignment="Left" Margin="486,59,0,0" Name="enterbutton" VerticalAlignment="Top" Width="89" Click="enterbutton_Click" Background="Orange" Foreground="White" />
        <Image Height="129" HorizontalAlignment="Left" Margin="38,106,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="117" Source="/WPFJM;component/Images/1001.JPG" />
