        <Button Content="MiBook" Height="26" HorizontalAlignment="Left" Margin="182,251,0,0" Name="bookbutton" VerticalAlignment="Top" Width="116" Click="bookbutton_Click" />
        <Button Content="MiPhone" Height="29" HorizontalAlignment="Left" Margin="328,250,0,0" Name="phonebutton" VerticalAlignment="Top" Width="122" Click="phonebutton_Click" />
        <Button Content="MiTV" Height="28" HorizontalAlignment="Left" Margin="466,250,0,0" Name="tvbutton" VerticalAlignment="Top" Width="117" Click="tvbutton_Click" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="330,59,0,0" Name="passwordBox" VerticalAlignment="Top" Width="120" />
        <Button Content="New User" Height="23" HorizontalAlignment="Left" Margin="486,85,0,0" Name="button1" VerticalAlignment="Top" Width="89" Background="White" Foreground="SlateBlue" BorderThickness="1" Click="button1_Click" />
        <Image Height="46" HorizontalAlignment="Left" Margin="471,12,0,0" Name="image5" Stretch="UniformToFill" VerticalAlignment="Top" Width="112" Source="/WPFJM;component/Images/WFD.jpg" />
    </Grid>
</Window>
